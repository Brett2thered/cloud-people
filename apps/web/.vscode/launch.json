{
    // Use IntelliSense to learn about possible attributes.
    // Hover to view descriptions of existing attributes.
    // For more information, visit: https://go.microsoft.com/fwlink/?linkid=830387
    "version": "0.2.0",
    "configurations": [
        {
            "name": "Next.js: Dev",
            "type": "node",
            "request": "launch",
            "cwd": "${workspaceFolder}",
            "runtimeExecutable": "pnpm",
            "runtimeArgs": ["run", "dev"],
            "console": "integratedTerminal"
        },
        {
            "name": "Next.js: Start",
            "type": "node",
            "request": "launch",
            "cwd": "${workspaceFolder}",
            "runtimeExecutable": "pnpm",
            "runtimeArgs": ["run", "build", "&&", "pnpm", "run", "start"],
            "console": "integratedTerminal"
        },
        {
            "name": "Next.js: Build",
            "type": "node",
            "request": "launch",
            "cwd": "${workspaceFolder}",
            "runtimeExecutable": "pnpm",
            "runtimeArgs": ["run", "build"],
            "console": "integratedTerminal"
        },
        {
            "name": "Next.js: Analyze Build",
            "type": "node",
            "request": "launch",
            "cwd": "${workspaceFolder}",
            "runtimeExecutable": "pnpm",
            "runtimeArgs": ["run", "analyze"],
            "console": "integratedTerminal",
            "env": {
                "ANALYZE": "true"
            }
        },
        {
            "name": "Serve Built Output",
            "type": "node",
            "request": "launch",
            "cwd": "${workspaceFolder}",
            "runtimeExecutable": "pnpm",
            "runtimeArgs": ["run", "serve"],
            "console": "integratedTerminal"
        },
        {
            "name": "Lint Code",
            "type": "node",
            "request": "launch",
            "cwd": "${workspaceFolder}",
            "runtimeExecutable": "pnpm",
            "runtimeArgs": ["run", "lint"],
            "console": "integratedTerminal"
        },
        {
            "name": "Format Code",
            "type": "node",
            "request": "launch",
            "cwd": "${workspaceFolder}",
            "runtimeExecutable": "pnpm",
            "runtimeArgs": ["run", "pretty"],
            "console": "integratedTerminal"
        },
        {
            "name": "Check Formatting",
            "type": "node",
            "request": "launch",
            "cwd": "${workspaceFolder}",
            "runtimeExecutable": "pnpm",
            "runtimeArgs": ["run", "pretty:check"],
            "console": "integratedTerminal"
        },
        {
            "name": "Jest: All Tests",
            "type": "node",
            "request": "launch",
            "cwd": "${workspaceFolder}",
            "runtimeExecutable": "pnpm",
            "runtimeArgs": ["run", "test"],
            "console": "integratedTerminal"
        },
        {
            "name": "Jest: Coverage",
            "type": "node",
            "request": "launch",
            "cwd": "${workspaceFolder}",
            "runtimeExecutable": "pnpm",
            "runtimeArgs": ["run", "test:coverage"],
            "console": "integratedTerminal"
        },
        {
            "name": "Jest: Watch",
            "type": "node",
            "request": "launch",
            "cwd": "${workspaceFolder}",
            "runtimeExecutable": "pnpm",
            "runtimeArgs": ["run", "test:watch"],
            "console": "integratedTerminal"
        },
        {
            "name": "Cypress E2E",
            "type": "node",
            "request": "launch",
            "cwd": "${workspaceFolder}",
            "runtimeExecutable": "pnpm",
            "runtimeArgs": ["run", "e2e:cypress"],
            "console": "integratedTerminal"
        },
        {
            "name": "Start Supabase",
            "type": "node",
            "request": "launch",
            "cwd": "${workspaceFolder}",
            "runtimeExecutable": "pnpm",
            "runtimeArgs": ["run", "start:supabase"],
            "console": "integratedTerminal"
        },
        {
            "name": "Stop Supabase",
            "type": "node",
            "request": "launch",
            "cwd": "${workspaceFolder}",
            "runtimeExecutable": "pnpm",
            "runtimeArgs": ["run", "stop:supabase"],
            "console": "integratedTerminal"
        }
    ]
}
