{
	"$schema": "https://json.schemastore.org/tsconfig",
	"extends": "../../packages/tsconfig/node.json",
	"compilerOptions": {
		"outDir": "dist",
		"rootDir": "src",
		"module": "ESNext",
		"moduleResolution": "Bundler",
		"baseUrl": ".",
		"paths": {
			"@/*": ["./src/*"],
			"@agents/*": ["./src/agents/*"],
			"@api/*": ["./src/api/*"],
			"@shared/*": ["./src/shared/*"]
		}
	},
	"include": ["src"]
}
