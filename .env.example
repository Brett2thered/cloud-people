# Supabase Configuration
# Project URL - Get this from your Supabase project settings
NEXT_PUBLIC_SUPABASE_URL=your_supabase_project_url
SUPABASE_URL=your_supabase_project_url

# For local development with Supabase CLI
#NEXT_PUBLIC_SUPABASE_URL=https://localhost:54321
#SUPABASE_URL=http://localhost:54321

# GraphQL endpoint
SUPABASE_GRAPHQL_ENDPOINT=${SUPABASE_URL}/graphql/v1

# API Keys - Get these from your Supabase project settings
# WARNING: Never commit the actual keys to version control
NEXT_PUBLIC_SUPABASE_ANON_KEY=your_anon_key
SUPABASE_ANON_KEY=your_anon_key
NEXT_PUBLIC_SUPABASE_SERVICE_KEY=your_service_key
SUPABASE_SERVICE_KEY=your_service_key

# Google OAuth Configuration
# Get these from Google Cloud Console
SUPABASE_AUTH_EXTERNAL_GOOGLE_REDIRECT_URI=http://localhost:54321/auth/v1/callback
SUPABASE_AUTH_EXTERNAL_GOOGLE_CLIENT_ID=your_google_client_id
SUPABASE_AUTH_EXTERNAL_GOOGLE_SECRET=your_google_client_secret

# Authentication Configuration
# Uncomment and modify these for local development
#GOTRUE_MAILER_EXTERNAL_HOSTS=localhost
#SUPABASE_AUTH_EMAIL_ENABLE_CONFIRMATIONS=false
#SUPABASE_AUTH_EMAIL_ENABLE_SIGNUP=true
#SUPABASE_AUTH_ENABLE_SIGNUP=true
#DISABLE_SIGN_IN_WITH_OTP=true

# Apple OAuth Configuration (if needed)
#SUPABASE_AUTH_EXTERNAL_APPLE_REDIRECT_URI=http://localhost:54321/auth/v1/callback
#SUPABASE_AUTH_EXTERNAL_APPLE_CLIENT_ID=your_apple_client_id
#SUPABASE_AUTH_EXTERNAL_APPLE_SECRET=your_apple_secret

# IDE Configuration
REACT_EDITOR=webstorm  # or code for VS Code, etc.
